{
  "name": "ivr-automation-testing",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=ivr-testing-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name ivr-automation-testing",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "node test-runner.js",
    "test:unit": "node test-runner.js",
    "test:integration": "node test-runner.js",
    "db:migrate:local": "wrangler d1 migrations apply ivr-testing-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply ivr-testing-db",
    "db:seed": "wrangler d1 execute ivr-testing-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute ivr-testing-db --local",
    "db:console:prod": "wrangler d1 execute ivr-testing-db",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "hono": "^4.10.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}